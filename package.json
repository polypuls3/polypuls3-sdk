{
  "name": "@polypuls3/sdk",
  "version": "0.4.5",
  "description": "React SDK for embedding Polypuls3 polls in dapps",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.mjs",
      "require": "./dist/core/index.js"
    },
    "./styles": "./dist/polypuls3.css"
  },
  "files": [
    "dist",
    "src/styles",
    "README.md"
  ],
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/polypuls3.css -o ./dist/polypuls3.css --minify",
    "build": "tsup && npm run build:css",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "polygon",
    "polypuls3",
    "polls",
    "voting",
    "web3",
    "react",
    "sdk",
    "dapp"
  ],
  "author": "Polypuls3",
  "repository": {
    "type": "git",
    "url": "https://github.com/polypuls3/polypuls3-sdk.git"
  },
  "homepage": "https://github.com/polypuls3/polypuls3-sdk#readme",
  "bugs": {
    "url": "https://github.com/polypuls3/polypuls3-sdk/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@wagmi/cli": "^2.1.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "viem": "^2.7.0",
    "vitest": "^1.1.0",
    "wagmi": "^2.5.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0"
  }
}
